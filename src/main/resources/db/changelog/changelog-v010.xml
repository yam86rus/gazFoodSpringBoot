<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">

    <changeSet id="10" author="Yakushev">

        <createTable tableName="dishes">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"></constraints>
            </column>
            <column name="name" type="varchar(200)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="structure" type="varchar(200)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="weight" type="DOUBLE">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="price" type="DOUBLE">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="dishCategory_id" type="int">
                <constraints nullable="false" unique="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="dishes"
                                 baseColumnNames="dishCategory_id"
                                 referencedTableName="dishes_categories"
                                 referencedColumnNames="id"
                                 constraintName="fk_dishes_dishCategory_id"
        />

        <insert tableName="dishes">
            <column name="name" value="Вареники с творожным фаршем (полуфабрикат)"/>
            <column name="structure" value="Тесто на основе пшеничной муки, начинка с творожным фаршем"/>
            <column name="weight" valueNumeric="250.50"/>
            <column name="price" valueNumeric="123.45"/>
            <column name="dishCategory_id" valueNumeric="1"/>
        </insert>

    </changeSet>

</databaseChangeLog>